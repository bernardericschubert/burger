<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Burger App</h1>
        <p class="lead">This is an app built using Handlebars, Node, Express, and MySql. Add a burger, eat it, save to history.</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <h4 class="header">Burgers to eat</h4>
            {{#each burgers}}
                {{#unless this.devoured}}
                    <div>
                        <ul>
                            <li>
                                {{burger_name}}
                                <button class="btn btn-sm btn-primary eat-it" data-id="{{id}}">Eat It!</button>
                            </li>
                        </ul>
                    </div>
                {{/unless}}
            {{/each}}
        </div>
        <div class="col-sm">
            <div class="row">
                <img src="/images/burger.jpeg">
            </div>
            <div class="row">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" id="new-burger" aria-describedby="burgerText" placeholder="Hungry?">
                        <small id="burgerText" class="form-text text-muted">Enter a burger you'd like to eat and hit Submit</small>
                    </div>
                    <button type="submit" class="btn btn-primary" id="submit-button">Submit</button>
                </form>
            </div>
        </div>
        <div class="col-sm">
            <h4 class="header">Burgers Devoured</h4>
            {{#each burgers}}
                {{#if this.devoured}}
                    <div>
                        <ul>
                            <li>
                                {{burger_name}}
                            </li>
                        </ul>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>